<div class="px-4 py-2 my-5 text-center">
    <h1 class="display-5 fw-bold"><i class="bi bi-pencil-square"></i> Edit Product</h1>
</div>

<div class="row justify-content-center">
    <div class="col-8">
        <form action="/update-product" enctype="multipart/form-data" method="POST">
            <div class="row g-3">
                
                <div class="col-12">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" name="name" id="name" class="form-control" value=" <%= product.name %>">
                    <input type="hidden" id="id" name="id" value="<%= product._id %>">
                </div>

                <div class="col-12">
                    <label for="brand" class="form-label">Brand</label>
                    <input type="text" name="brand" id="brand" class="form-control"value=" <%= product.brand %>" >
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">Description</label> 
                    <textarea name="description" id="description" class="form-control" cols="30" rows="4"><%= product.description %></textarea>
                </div>

                <div class="col-12">
                    <label for="tags" class="form-label">Tags</label><br>
                    <small>Example: tablets, pills, etc</small>
                            <input type="text" name="tags" class="form-control" value=" <%= product.tags %>">
                </div>

                <div class="col-12">
                    <label for="price" class="form-label">Price</label><br>
                    <small>Example: â‚¹ 499</small>
                    <input type="text" name="price" id="price" class="form-control" value=" <%= product.price %>">
                </div>

                <div class="col-12">
                    <label for="gender" class="form-label">Gender</label><br>

                    <div class="form-check" >
                        <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="Men" <% if(product.gender=='Men') {%>checked <% } %>>
                        <label class="form-check-label" for="exampleRadios1">
                          Men
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="Women" <% if(product.gender=='Women') {%>checked <% } %>>
                        <label class="form-check-label" for="exampleRadios2">
                          Women
                        </label>
                      </div>
                </div>

                <div class="col12">
                    <label for="image">Product Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>

                                

                <div class="col-12 ">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>